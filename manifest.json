{
  "name": "InstaImageDownload",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Download largest image from Instagram Popup Dialog",
  "browser_action": {
    "default_title": "Download Instagram Popup Image",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "commands": {
    "open_large_image": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "Command+Shift+X",
        "chromeos": "Ctrl+Shift+X",
        "linux": "Ctrl+Shift+X"
      },
      "description": "Open"
    },
    "add_to_list": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A",
        "chromeos": "Ctrl+Shift+A",
        "linux": "Ctrl+Shift+A"
      },
      "description": "Add To List"
    },
    "download_list": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z",
        "chromeos": "Ctrl+Shift+Z",
        "linux": "Ctrl+Shift+Z"
      },
      "description": "Download Zip"
    },
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      }
    }
  },
  "permissions": [
    "activeTab",
    "background",
    "unlimitedStorage",
    "downloads"
  ]
}